{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/backend/index.js"
    },
    {
      "source": "/auth/:path*",
      "destination": "/backend/index.js"
    },
    {
      "source": "/posts/:path*",
      "destination": "/backend/index.js"
    },
    {
      "source": "/comments/:path*",
      "destination": "/backend/index.js"
    },
    {
      "source": "/likes/:path*",
      "destination": "/backend/index.js"
    },
    {
      "source": "/users/:path*",
      "destination": "/backend/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/build/index.html"
    }
  ]
}